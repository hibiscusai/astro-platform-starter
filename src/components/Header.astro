---
import Logo from "./Logo.astro";
---

<header class="site-header" role="banner">
  <div class="header-inner">
    {/* Logo is fixed to viewport top-left */}
    <Logo />

    <span class="sr-only">Hibiscus AI â€” home</span>

    <!-- If you have navigation later, it goes here -->
    <!-- <nav>...</nav> -->
  </div>
</header>

<style>
  :root {
    --site-max: 1120px;
    --page-pad: 20px; /* same padding as hero */
    --logo-width: 200px; /* adjust visual size */
    --logo-gap: 16px; /* space between logo and header content */
  }

  /* HEADER WRAPPER (FULL WIDTH) */
  .site-header {
    position: relative;
    width: 100%;
    margin: 0;
    padding: 0;
    background: transparent;
    overflow: visible;
  }

  /* INNER CONTENT ROW */
  .header-inner {
    max-width: var(--site-max);
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: flex-start;
    gap: 12px;

    /* SHIFT CONTENT RIGHT so it doesn't overlap fixed logo */
    padding-top: 12px;
    padding-bottom: 12px;
    padding-right: var(--page-pad);
    padding-left: calc(var(--logo-width) + var(--logo-gap));
  }

  /* FIXED LOGO (injected by Logo.astro) */
  .brand {
    position: fixed;
    top: 0;
    left: 0;
    margin: 0;
    padding: 0;
    z-index: 9999;
    display: inline-flex;
    align-items: center;
  }

  .brand-logo {
    height: var(--logo-width);
    width: auto;
    display: block;
  }

  /* Screen-reader text only */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0 0 0 0);
    white-space: nowrap;
    border: 0;
  }

  /* MOBILE ADJUSTMENT */
  @media (max-width: 520px) {
    .header-inner {
      padding-left: calc(var(--logo-width) * 0.75 + var(--logo-gap));
      padding-right: 12px;
    }

    .brand-logo {
      height: calc(var(--logo-width) * 0.75);
    }
  }
</style>

