---
const title = "Trinetra";
const subtitle = "Reduce procurement delays • Lower supplier risk • Accelerate executive decisions";
const metrics = [
  { label: "Procurement delay reduction", value: "30–40%" },
  { label: "Negotiation outcome uplift", value: "18–27%" },
  { label: "Operational cost improvement", value: "7–12%" },
  { label: "Decision cycle time", value: "2× faster" }
];
const useCases = [
  { title: "Hospitals", problem: "Emergency stockouts & compliance exposure", intervention: "Real-time supplier scoring + prioritized sourcing", outcome: "Procurement cycle stabilised, fewer stockouts" },
  { title: "Retail", problem: "Price volatility & lost shelf availability", intervention: "Predictive price alerts + polite negotiation", outcome: "Improved availability and margin protection" },
  { title: "Manufacturing", problem: "Supplier lead-time variability", intervention: "ERP-integrated risk orchestration", outcome: "Reduced production downtime" }
];
const year = new Date().getFullYear();
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content="Trinetra: Agentic intelligence to reduce procurement delays, lower supplier risk and accelerate executive decisions." />
  </head>

  <style>
  html, body, #__astro {
    background: #000 !important;
    color: #e6eef8 !important;
  }
</style>

      <!-- NAV / top bar -->
      <header class="w-full border-b border-neutral-800 bg-black">
        <div class="max-w-6xl mx-auto flex items-center justify-between px-6 md:px-8 py-4">
          <div class="flex items-center gap-4">
            <!-- replace /images/logo-dark.svg with your logo -->
            <img src="/images/logo-dark.svg" alt="Trinetra logo" class="h-9 w-auto" />
            <span class="text-slate-400 text-sm hidden md:inline">Enterprise agentic orchestration</span>
          </div>
          <nav class="flex items-center gap-4">
            <a href="/about" class="text-slate-300 text-sm hover:underline">About</a>
            <a href="/platform" class="text-slate-300 text-sm hover:underline">Platform</a>
            <a href="/contact" class="px-4 py-2 bg-emerald-500 text-black rounded-md font-semibold text-sm">Request Demo</a>
          </nav>
        </div>
      </header>

      <!-- HERO -->
      <section class="py-20">
        <div class="max-w-5xl mx-auto px-6 md:px-8 text-center">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold leading-tight tracking-tight text-white">{title}</h1>
          <p class="mt-4 text-lg md:text-xl text-slate-300 max-w-3xl mx-auto">{subtitle}</p>

          <div class="mt-8 flex flex-col sm:flex-row gap-3 justify-center">
            <a href="/contact" class="inline-flex items-center justify-center px-6 py-3 rounded-md bg-emerald-500 text-black font-semibold shadow-md">Request Private Demo</a>
            <a href="#impact" class="inline-flex items-center justify-center px-6 py-3 rounded-md border border-neutral-800 text-slate-300">Board Brief (PDF)</a>
          </div>

          <p class="mt-6 text-slate-500 text-sm">For CEOs, board members and executive leadership teams. No fluff — only strategic impact.</p>
        </div>
      </section>

      <!-- PROBLEM MATRIX -->
      <section class="py-10 border-t border-neutral-800">
        <div class="max-w-6xl mx-auto px-6 md:px-8">
          <h2 class="text-2xl font-bold mb-6 text-white">The Executive Problem Matrix</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="p-6 rounded-lg bg-neutral-950/40 border border-neutral-900">
              <h3 class="font-semibold text-lg text-white">Cost & Margin Leakage</h3>
              <ul class="mt-3 text-slate-300 list-disc ml-5 text-sm">
                <li>Untracked supplier surcharges</li>
                <li>Manual price arbitrage losses</li>
                <li>Reactive procurement spend</li>
              </ul>
            </div>
            <div class="p-6 rounded-lg bg-neutral-950/40 border border-neutral-900">
              <h3 class="font-semibold text-lg text-white">Operational & Compliance Risk</h3>
              <ul class="mt-3 text-slate-300 list-disc ml-5 text-sm">
                <li>Unexpected supplier failures</li>
                <li>Regulatory exposure from ad-hoc sourcing</li>
                <li>Audit & traceability gaps</li>
              </ul>
            </div>
            <div class="p-6 rounded-lg bg-neutral-950/40 border border-neutral-900">
              <h3 class="font-semibold text-lg text-white">Decision Friction</h3>
              <ul class="mt-3 text-slate-300 list-disc ml-5 text-sm">
                <li>Slow executive approvals</li>
                <li>Data scattered across silos</li>
                <li>Inability to act preemptively</li>
              </ul>
            </div>
          </div>
        </div>
      </section>

      <!-- STRATEGIC ADVANTAGE -->
      <section class="py-12">
        <div class="max-w-5xl mx-auto px-6 md:px-8">
          <h2 class="text-2xl font-bold mb-4 text-white">Trinetra — Strategic Advantage</h2>
          <p class="text-slate-300 mb-6">Boardroom outcomes, not feature lists. We deliver orchestration that integrates, predicts, and negotiates while preserving your governance and ERP investments.</p>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="p-5 rounded-lg bg-neutral-950/30 border border-neutral-900">
              <h4 class="font-semibold text-white">Agentic Automation</h4>
              <p class="text-slate-300 text-sm mt-2">Autonomous workflows that propose actions and request executive approval only when required.</p>
            </div>
            <div class="p-5 rounded-lg bg-neutral-950/30 border border-neutral-900">
              <h4 class="font-semibold text-white">Predictive Supplier Scoring</h4>
              <p class="text-slate-300 text-sm mt-2">Realtime risk signals across financial, logistic and compliance dimensions.</p>
            </div>
            <div class="p-5 rounded-lg bg-neutral-950/30 border border-neutral-900">
              <h4 class="font-semibold text-white">Non-disruptive Integration</h4>
              <p class="text-slate-300 text-sm mt-2">Plugs into ERP and procurement systems with minimal change management.</p>
            </div>
          </div>
        </div>
      </section>

      <!-- IMPACT METRICS -->
      <section id="impact" class="py-12 border-t border-neutral-800">
        <div class="max-w-5xl mx-auto px-6 md:px-8 text-center">
          <h2 class="text-2xl font-bold mb-6 text-white">Board-Level Impact (Representative)</h2>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
            {metrics.map(metric => (
              <div class="p-6 rounded-lg bg-neutral-950/25 border border-neutral-900">
                <div class="text-2xl font-extrabold text-white">{metric.value}</div>
                <div class="text-slate-300 mt-2 text-sm">{metric.label}</div>
              </div>
            ))}
          </div>
          <p class="text-slate-500 text-sm mt-4">*Sample figures based on early pilots. Actual results depend on integration depth and category mix.</p>
        </div>
      </section>

      <!-- USE CASES -->
      <section class="py-12">
        <div class="max-w-6xl mx-auto px-6 md:px-8">
          <h2 class="text-2xl font-bold mb-6 text-white">Applied Use Cases</h2>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {useCases.map(u => (
              <div class="p-6 rounded-lg bg-neutral-950/30 border border-neutral-900">
                <h3 class="font-semibold text-white">{u.title}</h3>
                <p class="text-slate-300 text-sm mt-2"><strong>Problem:</strong> {u.problem}</p>
                <p class="text-slate-300 text-sm mt-2"><strong>Intervention:</strong> {u.intervention}</p>
                <p class="text-emerald-400 text-sm mt-3"><strong>Outcome:</strong> {u.outcome}</p>
              </div>
            ))}
          </div>
        </div>
      </section>

      <!-- CREDIBILITY STRIP -->
      <section class="py-8 border-t border-neutral-800">
        <div class="max-w-6xl mx-auto px-6 md:px-8 flex flex-col md:flex-row items-center justify-between gap-4">
          <div class="text-slate-300 text-sm">
            <strong class="text-white">Built by experts in cyber intelligence, agentic systems and enterprise ops.</strong>
            <div class="mt-2 text-slate-500 text-xs">Confidential briefings available on request for validated partners.</div>
          </div>
          <div class="flex items-center gap-4">
            <!-- replace these logos in /public/images/ -->
            <img src="/images/logo-partner-1-dark.svg" alt="partner" class="h-8 opacity-70" />
            <img src="/images/logo-partner-2-dark.svg" alt="partner" class="h-8 opacity-70" />
          </div>
        </div>
      </section>

      <!-- PRIVATE DEMO FORM -->
      <section class="py-12 border-t border-neutral-800">
        <div class="max-w-3xl mx-auto px-6 md:px-8">
          <h2 class="text-2xl font-bold mb-4 text-white">Request a Private Executive Demonstration</h2>
          <p class="text-slate-300 text-sm mb-4">10 minutes for a strategic walkthrough. Provide a brief context and we will prepare a tailored board brief.</p>

          <form name="exec-demo" method="POST" data-netlify="true" class="space-y-4 bg-neutral-950/25 p-6 rounded-lg border border-neutral-900">
            <input type="hidden" name="form-name" value="exec-demo" />
            <label class="block">
              <span class="text-slate-300 text-sm">Full name</span>
              <input name="name" required class="mt-1 block w-full rounded-md border border-neutral-800 bg-transparent px-3 py-2 text-white" />
            </label>

            <label class="block">
              <span class="text-slate-300 text-sm">Company / Hospital Group</span>
              <input name="company" required class="mt-1 block w-full rounded-md border border-neutral-800 bg-transparent px-3 py-2 text-white" />
            </label>

            <label class="block">
              <span class="text-slate-300 text-sm">Role / Title</span>
              <input name="role" required class="mt-1 block w-full rounded-md border border-neutral-800 bg-transparent px-3 py-2 text-white" />
            </label>

            <label class="block">
              <span class="text-slate-300 text-sm">Business email</span>
              <input name="email" type="email" required class="mt-1 block w-full rounded-md border border-neutral-800 bg-transparent px-3 py-2 text-white" />
            </label>

            <label class="block">
              <span class="text-slate-300 text-sm">Short context (optional)</span>
              <textarea name="message" rows="3" class="mt-1 block w-full rounded-md border border-neutral-800 bg-transparent px-3 py-2 text-white"></textarea>
            </label>

            <div class="flex justify-end">
              <button type="submit" class="px-5 py-2 rounded-md bg-emerald-500 text-black font-semibold">Request Demo</button>
            </div>
          </form>
        </div>
      </section>

      <!-- FOOTER -->
      <footer class="py-8 border-t border-neutral-800 bg-black mt-auto">
        <div class="max-w-6xl mx-auto px-6 md:px-8 flex items-center justify-between text-slate-500 text-sm">
          <div>© {year} Trinetra — Confidential briefings on request</div>
          <div class="flex gap-4">
            <a href="/privacy" class="hover:underline text-slate-400">Privacy</a>
            <a href="/terms" class="hover:underline text-slate-400">Terms</a>
          </div>
        </div>
      </footer>
    </main>
  </body>
</html>
